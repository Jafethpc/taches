doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Taches
        link(rel="stylesheet", href="/task.css" type="text/css" charset="utf-8")
    body
        header
            section.leftContainer
                section.logo
                    p.logoTitle TACHES
                    img.logoImg(src="/images/logo/Taches.png", alt="Logo")
                p.logoHeading Active Tasks
                p.logoDescription Add tasks as you wish.
            section.rightContainer
                button.addTaskBtn +
        main
            section.addContainer
                form.addForm(action="/add", method="POST")
                    p.taskTitle Task
                    input.taskInput(type="text", name="task")
                    p.dateTitle Date
                    section.dateContainer
                        input.dayInput(type="number", name="day")
                        p.dateDivider /
                        input.monthInput(type="number", name="month")
                    button.addBtn(type="submit") +
            section.taskContainer 
                if tasks.length > 0
                    .grid 
                        each task in tasks
                            section.task
                                form(action=("/complete/" + task.id) method="POST") 
                                    button.completeBtn(type="submit") &#10003;
                                section.dateContainer 
                                    p.dateTitle 
                                    p.date #{task.day} / #{task.month}
                                p.taskTitle #{task.task}
                                button.editBtn Edit
                                form(action=('/save/'+task.id) method="POST")
                                    input.saveinput(type="text", name="editedTask" placeholder=task.task)
                                    button.saveBtn(type="submit") Save
                                form(action=('/delete/' + task.id) method="POST")
                                    button.deleteBtn(type="submit") Delete
        script(src="tt.js")